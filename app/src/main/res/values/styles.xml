<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumberPickerStyle">
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:colorControlNormal">@color/secondary_color</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/radio_text_selector</item>
    </style>
    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Цвет фона -->
        <item name="android:background">@color/white</item>
        <!-- Цвет иконок и текста когда не выбрано -->
        <item name="itemIconTint">@color/secondary_color</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="WhiteButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">12dp</item>  <!-- Уровень поднятия -->
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="cornerRadius">8dp</item>  <!-- Закругление углов -->
        <item name="strokeColor">@color/gray_light</item>  <!-- Цвет рамки -->
        <item name="strokeWidth">1dp</item>  <!-- Толщина рамки -->
    </style>

    <style name="RedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">12dp</item>  <!-- Уровень поднятия -->
        <item name="android:background">@drawable/rounded_button</item>
        <item name="cornerRadius">8dp</item>  <!-- Закругление углов -->

    </style>


</resources>