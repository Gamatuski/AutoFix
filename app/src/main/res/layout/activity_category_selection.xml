<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">


    <!-- Кнопки Назад и Отмена над шапкой -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingHorizontal="16dp"
        android:id="@+id/buttons">


        <!-- Кнопка Назад -->
        <ImageView
            android:id="@+id/back_button_top"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_ic"
            android:padding="2dp"
            />

        <!-- Кнопка Отмена -->
        <ImageView
            android:id="@+id/cancel_button_top"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/close_ic"
            android:padding="2dp"
            />
    </RelativeLayout>

    <!-- Шапка (как в вашем примере) -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingHorizontal="16dp"
        android:layout_below="@id/buttons">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@drawable/service_ic"
            android:background="@drawable/gradient_circle"
            android:padding="6dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/back_button"
            android:text="Шаг 2/3"
            android:textColor="@color/primary_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginStart="11dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/back_button"
            android:text="Выбор услуги"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <!-- Прогресс-бар с точками -->
    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp">
        <!-- Фон прогресс-бара -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_light"
            android:layout_marginTop="2dp"/>
        <!-- Оранжевая часть прогресса -->
        <View
            android:id="@+id/progress_fill"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@color/primary_color"
            android:layout_marginTop="2dp"/>
        <!-- Точки прогресса -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Первая точка (1/3) -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <View
                    android:id="@+id/first_dot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/progress_dot_active"
                    />
            </RelativeLayout>
            <!-- Вторая точка (2/3) -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <View
                    android:id="@+id/second_dot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/progress_dot_active"/>
            </RelativeLayout>
            <!-- Третья точка (3/3) -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <View
                    android:id="@+id/third_dot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/progress_dot_inactive"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Поиск -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_rounded"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Поиск услуг"
            android:background="@drawable/edittext_rounded"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Прогресс бар -->
    <!-- Состояние загрузки -->
    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_container"

        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@color/primary_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Загрузка..."
            android:textSize="16sp"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Список услуг -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/services_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/loading_layout"
        android:layout_above="@id/summary_card"
        android:paddingHorizontal="8dp"
        android:clipToPadding="false"/>

    <!-- Нижняя часть (итоговая информация) в CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/summary_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:cardElevation="26dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:id="@+id/summary_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Итого"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Старая цена (зачеркнутая) -->
            <TextView
                android:id="@+id/total_old_price_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2000 ₽"
                android:textSize="16sp"
                android:textColor="#757575"
                android:visibility="gone"
                android:layout_marginBottom="4dp"/>

            <!-- Новая цена -->
            <TextView
                android:id="@+id/total_price_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 ₽"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Без учёта стоимости запчастей"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/proceed_to_booking_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="К записи на СТО"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"
                app:backgroundTint="@null"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
